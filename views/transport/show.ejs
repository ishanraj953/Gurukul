<%- layout("layouts/boilerplate") %>

<div class="containerx py-4">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow-sm mb-4">

        <img 
          src="<%= student.image.url %>" 
          class="card-img-top img-fluid rounded-top show-img"
          style="max-height: 400px; object-fit: cover;"
        >

        <div class="card-body">
          <h1 class="card-title mb-3"><%= student.name %></h1>

          <ul class="list-group list-group-flush mb-3">
            <li class="list-group-item"><%= student.regNo %></li>
            <li class="list-group-item"><%= student.email %></li>
            <li class="list-group-item"><%= student.country %></li>
            <li class="list-group-item"><%= student.location %></li>
          </ul>

          <div class="d-flex gap-2">
            <form action="/student/<%= student._id %>/edit" method="get" class="d-inline">
              <button class="btn btn-outline-dark">Edit</button>
            </form>

            <form action="/student/<%= student._id %>?_method=DELETE" method="post" class="d-inline">
              <button class="btn btn-dark">Delete</button>
            </form>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>
